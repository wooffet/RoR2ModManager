{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "es2016", "es2015", "dom"]
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  //  "include": ["main.ts", "src/**/*"],
  "include": [
    "src/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
